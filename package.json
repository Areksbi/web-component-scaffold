{
  "name": "web-component-scaffold",
  "version": "0.0.0",
  "description": "Web Component generator.",
  "main": "index.js",
  "scripts": {
    "dev": "webpack --config webpack.dev.js",
    "prod": "webpack --config webpack.prod.js",
    "release": "standard-version",
    "release:major": "standard-version --release-as major",
    "release:minor": "standard-version --release-as minor",
    "release:patch": "standard-version --release-as patch",
    "start": "webpack serve --config webpack.dev.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Areksbi/web-component-scaffold.git"
  },
  "keywords": [
    "Web Component"
  ],
  "author": "Roman Baran",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Areksbi/web-component-scaffold/issues"
  },
  "homepage": "https://github.com/Areksbi/web-component-scaffold#readme",
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@typescript-eslint/eslint-plugin": "^4.9.1",
    "@typescript-eslint/parser": "^4.9.1",
    "css-loader": "^5.0.1",
    "eslint": "^7.15.0",
    "html-webpack-plugin": "^4.5.0",
    "husky": "^4.3.5",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "pug": "^3.0.0",
    "pug-loader": "^2.4.0",
    "sass": "^1.30.0",
    "sass-loader": "^10.1.0",
    "style-loader": "^2.0.0",
    "ts-loader": "^8.0.11",
    "typescript": "^4.1.2",
    "webpack": "^5.10.0",
    "webpack-cli": "^4.2.0",
    "webpack-dev-server": "^3.11.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint . --ext .ts --fix"
    ],
    "*{.json,.css,.scss,.html,.pug,.js}": [
      "prettier --write"
    ]
  }
}
